@model FrotaWeb.Models.UnidadeAdministrativaViewModel

<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/form.css" asp-append-version="true" />

<main class="container mt-4">
	<h4 class="page-title fs-2">
		<i class="fa fa-building mr-3"></i>
		Unidade Administrativa
	</h4>
	<h1 class="my-text-label fs-3 mt-4 mb-4">Nova Unidade</h1>
	<form asp-action="Create" class="creator-form fs-5">
		<div asp-validation-summary="ModelOnly" class="text-danger"></div>
		<div class="row mb-3">
			<div class="col-md-6">
				<div class="type-container offset-md-1 itens-center">
					<label asp-for="Nome" class="label">Nome</label>
					<input asp-for="Nome" class="form-control" placeholder="Nome" />
					<span asp-validation-for="Nome" class="text-danger"></span>
				</div>
			</div>
			<div class="col-md-6">
				<div class="type-container offset-md-2 itens-center">
					<label asp-for="Cep" class="label">Cep</label>
					<input asp-for="Cep" class="form-control" placeholder="Cep" />
					<span asp-validation-for="Cep" class="text-danger"></span>
				</div>
			</div>
		</div>
		<div class="row mb-3">
			<div class="col-md-6">
				<div class="type-container offset-md-1 itens-center">
					<label asp-for="Rua" class="label">Rua</label>
					<input asp-for="Rua" class="form-control" placeholder="Rua" />
					<span asp-validation-for="Rua" class="text-danger"></span>
				</div>
			</div>
			<div class="col-md-6">
				<div class="type-container offset-md-2 itens-center">
					<label asp-for="Bairro" class="label">Bairro</label>
					<input asp-for="Bairro" class="form-control" placeholder="Bairro" />
					<span asp-validation-for="Bairro" class="text-danger"></span>
				</div>
			</div>
		</div>
		<div class="row mb-3">
			<div class="col-md-6">
				<div class="type-container offset-md-1 itens-center">
					<label asp-for="Complemento" class="label">Complemento</label>
					<input asp-for="Complemento" class="form-control" placeholder="Complemento" />
					<span asp-validation-for="Complemento" class="text-danger"></span>
				</div>
			</div>
			<div class="col-md-6">
				<div class="type-container offset-md-2 itens-center">
					<label asp-for="Numero" class="label">Numero</label>
					<input asp-for="Numero" class="form-control" placeholder="Numero" />
					<span asp-validation-for="Numero" class="text-danger"></span>
				</div>
			</div>
		</div>
		<div class="row mb-3">
			<div class="col-md-6">
				<div class="type-container offset-md-1 itens-center">
					<label asp-for="Cidade" class="label">Cidade</label>
					<input asp-for="Cidade" class="form-control" placeholder="Cidade" />
					<span asp-validation-for="Cidade" class="text-danger"></span>
				</div>
			</div>
			<div class="col-md-6">
				<div class="type-container offset-md-2 itens-center">
					<label asp-for="Estado" class="label">Estado</label>
					<input asp-for="Estado" class="form-control" placeholder="Estado" />
					<span asp-validation-for="Estado" class="text-danger"></span>
				</div>
			</div>
		</div>
		<div class="row mb-3">
			<div class="col-md-6">
				<div class="type-container offset-md-1 itens-center">
					<label asp-for="Latitude" class="label">Latitude</label>
					<input asp-for="Latitude" class="form-control" placeholder="Latitude" />
					<span asp-validation-for="Latitude" class="text-danger"></span>
				</div>
			</div>
			<div class="col-md-6">
				<div class="type-container offset-md-2 itens-center">
					<label asp-for="Longitude" class="label">Longitude</label>
					<input asp-for="Longitude" class="form-control" placeholder="Longitude" />
					<span asp-validation-for="Longitude" class="text-danger"></span>
				</div>
			</div>
		</div>
		<div class="row mt-4">
			<div class="col-12 col-md-6 mb-2 mb-md-0 itens-center">
				<a asp-action="Index" class="my-button btn btn-danger btn-sm w-50 w-md-auto">Voltar</a>
			</div>
			<div class="col-12 col-md-6 d-flex justify-content-md-end itens-center">
				<button type="submit" value="Create" class="my-button btn btn-success btn-sm w-50 w-md-auto botao-sucesso">Cadastrar</button>
			</div>
		</div>
	</form>
</main>
@section Scripts {
	<script src="~/js/form.js" asp-append-version="true"></script>
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}