<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FrotaWeb</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FrotaWeb.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">
    <link href="css/style_prototipos.css" rel="stylesheet" type="text/css" />
    <!-- Template Stylesheet -->
</head>
<body>
    <header>
    <div class="sidebar">
        <a class="active" href="#home"> Frota Pública </a>
        <div class="d-flex align-items-center ms-4 mb-4">
            <div class="position-relative">
                <img class="rounded-circle" src="img/user_person.jpg" alt="" style="width: 40px; height: 40px;">
                <div class="bg-success rounded-circle border border-2 border-white position-absolute end-0 bottom-0 p-1"></div>
            </div>
            <div class="ms-3">
                <span>Fulano Silva</span>
                <h6 class="mb-0">Administrador</h6>
            </div>
        </div>

        <nav>
        <div class="navbar-nav w-100">
            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index"><i class="fa fa-home me-2"></i>Página Inicial</a>
            </li>
            <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="MarcaPecaInsumo" asp-action="Index"><i class="fa fa-cog me-2"></i>Manutenção</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index"><i class="fa fa-car me-2"></i>Veiculos</a>
            </li>

            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="ModeloVeiculo" asp-action="Index"><i class="fa fa-car me-2"></i>Modelo de Veiculo</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="Frota" asp-action="Index"><i class="fa fa-truck me-2"></i>Frota</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="Pessoa" asp-action="Index"><i class="fa fa-id-card me-2"></i>Condutores</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="Frota" asp-action="Index"><i class="fa fa-chart-bar me-2"></i>Relatórios</a>
            </li>
            <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy"><i class="fa fa-lock me-2"></i>Privacidade</a>
            </li>
        </div>
        </nav>
        </header>

    <div class="content">
        <!-- Navbar Start -->
        <nav class="navbar navbar-expand bg-blue navbar-light sticky-top px-4 py-0">
            <a href="index.html" class="navbar-brand d-flex d-lg-none me-4">
                <h2 class="text-primary mb-0"><i class="fa fa-home me-2"></i></h2>
            </a>
            <a href="#" class="sidebar-toggler flex-shrink-0">
                <i class="fa fa-bars bg-light"></i>
            </a>
        </nav>



    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    </div>

     <footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2023 - FrotaWeb - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>
    

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    <script>
        $(document).ready(function () {
            $('[data-toggle="tooltip"]').tooltip();
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
